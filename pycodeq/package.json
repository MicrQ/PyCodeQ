{
  "name": "pycodeq",
  "displayName": "PyCodeQ",
  "description": "The simplest, fastest pycodestyle linter available!",
  "publisher": "MicrQ",
  "repository": {
    "type": "git",
    "url": "https://github.com/MicrQ/PyCodeQ.git"
  },
  "icon": "images/icon.png",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pycodeq.runPyCodeQ",
        "title": "PyCodeQ: Run Linter Check"
      }
    ],
    "configuration": {
      "title": "PyCodeQ",
      "properties": {
        "pycodeq.executablePath": {
          "type": "string",
          "default": "pycodestyle",
          "description": "Path to the pycodestyle executable. If not set, it will assume it's installed globally."
        },
        "pycodeq.ignore": {
          "type": "array",
          "default": [],
          "description": "List of error codes to ignore. For example, ['E501', 'E302']"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
